<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tjedan3.HeloXAMLPage">
    <StackLayout>
        <Label x:Name="sliderLabel" Text="Welcome to Xamarin Forms!"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" 
               Rotation="-15"
               IsVisible="true"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Blue"
               />
        <Slider x:Name="helloSlider" ValueChanged="helloSlider_ValueChanged" Minimum="0" Maximum="100" />
    </StackLayout>
</ContentPage>